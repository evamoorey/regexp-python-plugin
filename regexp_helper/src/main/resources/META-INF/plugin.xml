<idea-plugin>

    <!-- Unique id for this plugin. Must stay constant for the life of the plugin. -->
    <id>org.intellij.sdk.regexp</id>

    <!-- Text to display as name on Preferences/Settings | Plugin page -->
    <name>RegexpHelper</name>

    <!-- Requires the python plugin to run -->
    <depends>com.intellij.modules.python</depends>

    <!-- Text to display as description on Preferences/Settings | Plugin page -->
    <description>
        <![CDATA[
      The RegExp Helper plugin allows users
      to write regular expressions on Python using
      validation, and functionality to test already written code.
    ]]>
        <![CDATA[
      This plugin also displays an explanation of the regular expressions.
    ]]>
    </description>
    <change-notes>
        <![CDATA[
      <b>0.1.0</b> First release <br>
    ]]>
    </change-notes>

    <!-- Text to display as company information on Preferences/Settings | Plugin page -->
    <vendor>Pleasure command from HSE.</vendor>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="RegExp explorer" icon="AllIcons.General.Modified" anchor="right" order="last"
                    factoryClass="org.intellij.sdk.regexp.RegExpToolWindowFactory"/>
    </extensions>

</idea-plugin>
